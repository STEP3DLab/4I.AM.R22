{
  "name": "4i-am-r22",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "eslint . --ext .js,.mjs,.cjs,.html",
    "format": "prettier --write \"**/*.{js,mjs,ts,html,css,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,mjs,ts,html,css,json,md,yml,yaml}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "build": "node scripts/build.mjs",
    "sitemap": "node scripts/generate-sitemap.mjs",
    "ci": "npm run lint && npm run format:check && npm run test && npm run build && npm run test:e2e -- --reporter=line",
    "deploy": "gh-pages -d dist",
    "dev": "http-server . -p 8080 -c-1"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.45.2",
    "autoprefixer": "^10.4.21",
    "cpy-cli": "^5.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-import": "^2.29.1",
    "gh-pages": "^6.1.1",
    "http-server": "^14.1.1",
    "jsdom": "^27.0.0",
    "playwright": "^1.45.2",
    "postcss": "^8.5.6",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "tailwindcss": "^3.4.13",
    "vitest": "^1.6.0"
  }
}
